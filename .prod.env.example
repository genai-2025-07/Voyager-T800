# ==========================================================================
# THIS ENV FILE SHOULD BE USED ONLY FOR PRODUCTION PURPOSE 
# Do NOT put AWS keys here
# AWS credentials are passed ONLY from the host shell environment variables
# See README.md
# ==========================================================================

# OpenAI / Claude via Bedrock
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-claude-key
GROQ_API_KEY=your-groq-key

#LLM Parameters
GROQ_MODEL_NAME=groq-llama3-70b
GROQ_TEMPERATURE=0.7

# Vision APIs
AWS_REKOGNITION_REGION=us-east-1

# Google map API
GOOGLE_MAPS_API_KEY=your-google-map-api-key

# Application
DEBUG=True
LOG_LEVEL=INFO

# =====================
# Docker production settings
# =====================
# Production environment (runtime)

HOST=0.0.0.0
CONTAINER_PORT_PROD=8001
HOST_PORT_PROD=8001
UVICORN_MODULE_PROD=app.main
GUNICORN_WORKERS=4
ACCESS_LOG_FILE=-
LOG_LEVEL:info

# FastAPI
FASTAPI_ENV_PROD=production

# =====================
# Docker production services settings
# =====================

# DynamoDB
DYNAMO_CONTAINER_PORT=8003
DYNAMO_HOST_PORT=8003
DYNAMO_USER=app_dev

# Redis
# Redis password must be set through docker secret
REDIS_USER=
REDIS_HOST_PORT=6379
REDIS_CONTAINER_PORT=6379

# Weaviate DB (Vector database)
WEAVIATE_DB_HOST_PORT=8090
WEAVIATE_DB_CONTAINER_PORT=8090
QUERY_DEFAULTS_LIMIT=25
AUTHENTICATION_ANONYMOUS_ACCESS_ENABLED=true
PERSISTENCE_DATA_PATH=/var/lib/weaviate
DEFAULT_VECTORIZER_MODULE=none
CLUSTER_HOSTNAME=node1
ASYNC_INDEXING=true
ENABLE_MODULES=""
CLUSTER_JOIN=""
GRPS_API_PORT=50051

# Streamlit
API_BASE_URL=http://api:8001
STREAMLIT_ENV=prod
VOYAGER_PAGE_TITLE="Voyager-T800 Travel Assistant"
VOYAGER_PAGE_ICON="ðŸš€"
VOYAGER_PAGE_TAGLINE="*Your AI-powered conversational trip planner*"
VOYAGER_MAX_INPUT_LENGTH=500
VOYAGER_SESSIONS_PAGE_SIZE=10

STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_SERVER_ENABLE_CORS=false
STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION=false
