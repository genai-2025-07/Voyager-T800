# ==========================================================================
# THIS ENV FILE SHOULD BE USED ONLY FOR DEVELOPMENT PURPOSE 
# Do NOT put AWS keys here
# AWS credentials are passed ONLY from the host shell environment variables
# See README.md
# ==========================================================================

# OpenAI / Claude via Bedrock
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-claude-key
GROQ_API_KEY=your-groq-key

#LLM Parameters
GROQ_MODEL_NAME=llama-3.1-8b-instant
GROQ_TEMPERATURE=0.7

# Vision APIs
AWS_REKOGNITION_REGION=us-east-1

# Google map API
GOOGLE_MAPS_API_KEY=your-google-map-api-key

# Application
DEBUG=True
LOG_LEVEL=INFO

# =====================
# Docker development settings
# =====================
# Local development environment (hot-reload)

HOST=0.0.0.0
CONTAINER_PORT_DEV=8000
HOST_PORT_DEV=8000
UVICORN_MODULE_DEV=app.main
ACCESS_LOG_FILE=-

# FastAPI
FASTAPI_ENV_DEV=development

# =====================
# Docker development services settings
# =====================

# DynamoDB
DYNAMO_CONTAINER_PORT=8003
DYNAMO_HOST_PORT=8003
DYNAMO_USER=app_dev

# Redis
# Redis password must be set through docker secret
REDIS_USER=default
REDIS_HOST_PORT=6379
REDIS_CONTAINER_PORT=6379
REDIS_PORT=2422

# Weaviate DB (Vector database)
WEAVIATE_DB_HOST_PORT=8090
WEAVIATE_DB_CONTAINER_PORT=8090
QUERY_DEFAULTS_LIMIT=25
AUTHENTICATION_ANONYMOUS_ACCESS_ENABLED=true
PERSISTENCE_DATA_PATH=/var/lib/weaviate
DEFAULT_VECTORIZER_MODULE=none
CLUSTER_HOSTNAME=node1
ASYNC_INDEXING=true
AUTOSCHEMA_ENABLED=false
ENABLE_MODULES=""
CLUSTER_JOIN=""
GRPS_API_PORT=50051

# =====================
# Embeddings generator configurations
# =====================

# Embedding Model & Provider
EMBED_MODEL=text-embedding-3-small
EMBED_PROVIDER=openai           

# Data cleaning
EMBED_CLEANING_VERSION=v1.2

# Metadata 
EMBED_METADATA_CSV_PATH=data/metadata.csv

# Directories
EMBED_INPUT_DIR=data/raw
EMBED_OUTPUT_DIR=data/embtest
MAP_DATA_CONFIG_PATH=app/config/map_data_service_config.yaml

# Chunking & Tokenization
# Tokens per chunk before splitting (affects chunk size and embedding cost).
# Higher overlap improves semantic continuity but increases number of chunks (and cost).
EMBED_MAX_TOKENS=450
EMBED_CHUNK_OVERLAP=0.2

# Chunking & Tokenization
EMBED_BATCH_SIZE=64

# API Batching & Rate Limits
EMBED_POLITE_DELAY=0.1

# Retry Strategy
EMBED_RETRY_ATTEMPTS=5
EMBED_RETRY_MIN_WAIT=1
EMBED_RETRY_MAX_WAIT=30

# Logger
LOGGING_CONFIG_FILE=logger.yaml
LOG_LEVEL=INFO
SERVICE_NAME=local-fastapi

#DynamoDB
AWS_REGION= us-east-2
DYNAMODB_TABLE = session_metadata

# Retriever config
RETRIEVER=similarity
TOP_K=5
FETCH_K=10
MMR_LAMBDA=0.5
HYBRID_ALPHA=0.7

# Claude response mock (for testing without API calls)
CLAUDE_RESPONSE_MOCK_PATH=app/utils/mocks/claude_response_mock.json

# Basic Workflow
HISTORY_FOLDER_DIRECTION=app/models/llms/basic_workflow/conversation_history
INTEGRATION_LOG_FILE_NAME=llm_workflow.log
CONFIG_FOLDER_PATH=app/models/llms/basic_workflow/config

# AWS Cognito (User authentication)
AWS_REGION=us-east-1
COGNITO_USER_POOL_ID=your_pool_id_here
COGNITO_CLIENT_ID=your_client_id_here